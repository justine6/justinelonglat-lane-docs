{
  "cleanUrls": true,
  "trailingSlash": false,

  "builds": [
    { "src": "index.html",           "use": "@vercel/static" },
    { "src": "getting-started.html", "use": "@vercel/static" },
    { "src": "tooling-setup.html",   "use": "@vercel/static" },
    { "src": "cicd-pipelines.html",  "use": "@vercel/static" },
    { "src": "styles.css",           "use": "@vercel/static" },
    { "src": "public/**",            "use": "@vercel/static" }
  ],

  "routes": [
    { "src": "/getting-started", "dest": "/getting-started.html" },
    { "src": "/tooling-setup",   "dest": "/tooling-setup.html" },
    { "src": "/cicd-pipelines",  "dest": "/cicd-pipelines.html" }
  ],

  "headers": [
    {
      "source": "/styles.css",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600" }
      ]
    },
    {
      "source": "/public/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)\\.(css|js|png|jpg|jpeg|gif|svg|webp|ico|woff|woff2|ttf|eot)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}